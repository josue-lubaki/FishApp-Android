<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:background="@color/dark"
    app:cardCornerRadius="@dimen/default_margin"
    android:elevation="@dimen/little_size"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/ColorYellowBackground"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/home_page_image_article"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:src="@drawable/trending1"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/home_page_title_article"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:ellipsize="end"
            android:textSize="@dimen/medium_size"
            android:layout_marginTop="@dimen/item_margin"
            android:text="@string/home_page_title_article"
            android:textColor="@color/dark"
            android:gravity="center"
            style="@style/DefaultTextStyle"/>

        <TextView
            android:id="@+id/home_page_price"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/small_size"
            android:text="@string/home_page_price"
            android:gravity="center"
            style="@style/ColorDarkRedText"/>

        <TextView
            android:id="@+id/home_page_consult_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />


    </LinearLayout>

</androidx.cardview.widget.CardView>