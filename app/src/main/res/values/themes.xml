<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FishApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--  Créer les composants pour le titre par défault  -->
    <style name="DefaultTextStyle">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="SubtitleTextStyle" parent="DefaultTextStyle">
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TitleTextStyle" parent="SubtitleTextStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="ColorYellowBackground">
        <item name="android:background">@color/darkYellow</item>
    </style>

    <style name="ColorYellowText">
        <item name="android:textColor">@color/darkYellow</item>
    </style>

    <style name="ColorDarkBackground">
        <item name="android:background">@color/dark</item>
    </style>

    <style name="ColorDarkText">
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="ColorLightBlueBackground">
        <item name="android:background">@color/lightBlue</item>
    </style>

    <style name="ColorBlueText">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="ColorDarkRedText">
        <item name="android:textColor">@color/darkRed</item>
    </style>

    <style name="GeneralNoTitle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>